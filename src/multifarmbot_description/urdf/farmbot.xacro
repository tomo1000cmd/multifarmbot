<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="farmbot">

  <xacro:property name="robot_name" value="farmbot" />

  <!-- Base link -->
  <link name="${robot_name}_base_link">
    <visual>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <box size="1.0 0.6 0.2"/>
      </geometry>
      <material name="blue">
        <color rgba="0.0 0.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0.1" rpy="0 0 0"/>
      <geometry>
        <box size="1.0 0.6 0.2"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="50.0"/>
      <inertia ixx="1.0" ixy="0.0" ixz="0.0" iyy="1.0" iyz="0.0" izz="1.0"/>
    </inertial>
  </link>

  <!-- Wheel macro -->
  <xacro:macro name="wheel" params="name x y z parent">
    <link name="${robot_name}_${name}_link">
      <visual>
        <geometry>
          <cylinder radius="0.2" length="0.1"/>
        </geometry>
        <material name="black">
          <color rgba="0.0 0.0 0.0 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <cylinder radius="0.2" length="0.1"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="5.0"/>
        <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
      </inertial>
    </link>

    <joint name="${robot_name}_${name}_joint" type="continuous">
      <parent link="${parent}"/>
      <child link="${robot_name}_${name}_link"/>
      <origin xyz="${x} ${y} ${z}" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
    </joint>
  </xacro:macro>

  <!-- Steerable wheel macro -->
  <xacro:macro name="steer_wheel" params="name x y z parent">
    <link name="${robot_name}_${name}_steer_link">
      <visual>
        <geometry>
          <box size="0.1 0.1 0.05"/>
        </geometry>
        <material name="gray">
          <color rgba="0.5 0.5 0.5 1.0"/>
        </material>
      </visual>
      <collision>
        <geometry>
          <box size="0.1 0.1 0.05"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="1.0"/>
        <inertia ixx="0.01" ixy="0.0" ixz="0.0" iyy="0.01" iyz="0.0" izz="0.01"/>
      </inertial>
    </link>

    <joint name="${robot_name}_${name}_steer_joint" type="revolute">
      <parent link="${parent}"/>
      <child link="${robot_name}_${name}_steer_link"/>
      <origin xyz="${x} ${y} ${z}" rpy="0 0 0"/>
      <axis xyz="0 0 1"/>
      <limit lower="-1.57" upper="1.57" effort="100" velocity="1.0"/>
    </joint>

    <xacro:wheel name="${name}_wheel" x="0" y="0" z="-0.1" parent="${robot_name}_${name}_steer_link"/>
  </xacro:macro>

  <!-- Four steerable wheels -->
  <xacro:steer_wheel name="front_left" x="0.4" y="0.3" z="0" parent="${robot_name}_base_link"/>
  <xacro:steer_wheel name="front_right" x="0.4" y="-0.3" z="0" parent="${robot_name}_base_link"/>
  <xacro:steer_wheel name="rear_left" x="-0.4" y="0.3" z="0" parent="${robot_name}_base_link"/>
  <xacro:steer_wheel name="rear_right" x="-0.4" y="-0.3" z="0" parent="${robot_name}_base_link"/>

</robot>